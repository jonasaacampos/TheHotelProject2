@model TheHotelProject2.ViewModel.QuartosViewModel
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

    }
    );

    function DisplayImage(result) {
        if (result.files && result.files[0]) {
            var fileReader = new FileReader;
            fileReader.onload = function (e) {
                $("#quartoFoto").attr('src', e.target.result);
            }

            fileReader.readAsDataURL(result.files[0]);
        }
    }

</script>


<div style="margin-top: 51px">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddQuarto" data-backdrop="static"
            data-keyboard="false">
        Adicionar Quarto
    </button>
    <!-- data-backdrop e data-keyboard atributes usados para evitar que via mouse
        ou clique fora do modal force o fechamento do mesmo-->

</div>

<div id="AddQuarto" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Quartos</h4>
            </div>

            <div class="modal-body">

                <div class="container">

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoNumero)
                        @Html.TextBoxFor(model => model.QuartoNumero, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoPreco)
                        @Html.TextBoxFor(model => model.QuartoPreco, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservaStatusId)
                        @Html.DropDownListFor(model => model.ReservaStatusId, Model.ListaReservaStatus, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoTipoID)
                        @Html.DropDownListFor(model => model.QuartoTipoID, Model.ListaQuartoTipo, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoCapacidade)
                        @Html.TextBoxFor(model => model.QuartoCapacidade, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoDescricao)
                        @Html.TextBoxFor(model => model.QuartoDescricao, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuartoFoto)
                        <input type="file" class="form-control" name="quartoFoto" title="Inserir Foto" onchange="DisplayImage(this)" />
                        <img id="quartoFoto" height="150" width="150" style="border: solid; margin: 15px" />
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success">Salvar</button>&nbsp;
                <button type="button" data-dismiss="modal" class="btn btn-danger">Cancelar</button>
            </div>
        </div>
    </div>

</div>